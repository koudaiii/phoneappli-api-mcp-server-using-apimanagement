using './main.bicep'

// API Management Service Name
// Note: Must be globally unique, 1-50 characters, alphanumerics and hyphens
param apimServiceName = 'phoneappli-api-${uniqueString(resourceGroup().id)}'

// Location
param location = 'japaneast'

// Publisher Information
// TODO: Replace with your actual email and organization name
param publisherEmail = 'admin@example.com'
param publisherName = 'PHONE APPLI API Organization'

// Tags
param tags = {
  project: 'phoneappli-api-mcp-server'
  managedBy: 'bicep'
  cost-center: 'engineering'
}

// Environment (sandbox or production)
param environment = 'sandbox'

// PHONE APPLI API Key
// IMPORTANT: This is a placeholder value. You MUST override this during deployment.
// Set environment variable PHONEAPPLI_API_KEY with your API key.
param phoneAppliApiKey = ''
